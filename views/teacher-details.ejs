<%- include('partials/header', { async: true }) %>
            <div class="card-body d-flex flex-column justify-content-center">
                <h4 class="text-center mb-4">Teacher Details</h4>
                <form>
                    <div class="mb-3">
                        <label for="teacherName" class="form-label">Name</label>
                        <input type="text" class="form-control" id="teacherName" value="<%= teacher.name %>" readonly>
                    </div>
                    <div class="mb-3">
                        <label for="teacherEmail" class="form-label">Email</label>
                        <input type="email" class="form-control" id="teacherEmail" value="<%= teacher.email %>" readonly>
                    </div>
                    <div class="mb-3">
                        <label for="teacherPhone" class="form-label">Phone Number</label>
                        <input type="tel" class="form-control" id="teacherPhone" value="<%= teacher.phone %>" readonly>
                    </div>
                    <div class="mb-3">
                        <label for="teacherClass" class="form-label">Class</label>
                        <input type="text" class="form-control" id="teacherClass" value="<%= teacher.class %>" readonly>
                    </div>

                    <!-- Admin edit button -->
                    <% if (isAdmin) { %>
                    <div class="d-grid mb-2">
                        <a href="/edit-teacher/<%= teacher._id %>" class="btn btn-warning">Edit</a>
                    </div>
                    <div class="d-grid mb-2">
                        <a href="/delete-teacher/<%= teacher._id %>" class="btn btn-danger">Delete</a>
                    </div>
                    <% } %>

                    <div class="d-grid mb-2">
                        <a href="/table" class="btn btn-primary">Back to Table</a>
                    </div>
                </form>
            </div>
<%- include('partials/footer.ejs', { async: true }) %>

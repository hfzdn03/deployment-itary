                    <script>
                        const user = <%- JSON.stringify(user) %>; // Ensure user object is available
                    
                        document.getElementById('searchInput').addEventListener('input', function () {
                            const query = this.value.toLowerCase();
                            const suggestionsBox = document.getElementById('suggestions');
                    
                            suggestionsBox.innerHTML = '';
                            if (!query) {
                                suggestionsBox.style.display = 'none';
                                return;
                            }
                    
                            fetch(`/api/search?query=${query}`)
                                .then(response => response.json())
                                .then(data => {
                                    console.log('Data received:', data); // Log the fetched data
                                    
                                    // Remove duplicates based on name or link
                                    const uniqueSuggestions = Array.from(new Set(data.map(item => item.name)))
                                        .map(name => data.find(item => item.name === name));
                    
                                    uniqueSuggestions.forEach(item => {
                                        const suggestionDiv = document.createElement('div');
                                        suggestionDiv.textContent = item.name;
                                        suggestionDiv.onclick = function () {
                                            window.location.href = item.link;
                                        };
                                        suggestionsBox.appendChild(suggestionDiv);
                                    });
                    
                                    suggestionsBox.style.display = uniqueSuggestions.length ? 'block' : 'none';
                                })
                                .catch(error => console.error('Error fetching suggestions:', error));
                        });
